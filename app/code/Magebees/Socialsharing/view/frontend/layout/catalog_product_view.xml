<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceContainer name="product.info.main">
                <block class="Magebees\Socialsharing\Block\Socialsharing" name="mb_socialshare_inlinecart" template="Magebees_Socialsharing::socialsharing.phtml">
                    <arguments>
                        <argument name="page" xsi:type="string">under_cart</argument>
                        <argument name="position" xsi:type="string">under_cart</argument>
                        <argument name="type" xsi:type="string">inline</argument>
                    </arguments>
                </block>
            </referenceContainer>
        </referenceContainer>
        <referenceContainer name="content.aside">
            <block class="Magebees\Socialsharing\Block\Socialsharing" name="mb_socialshare_float" template="Magebees_Socialsharing::socialsharing.phtml">
                <arguments>
                    <argument name="page" xsi:type="string">product_page</argument>
                    <argument name="position" xsi:type="string">float_position</argument>
                    <argument name="type" xsi:type="string">float</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>